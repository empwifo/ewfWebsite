{% macro footer_link(data, title="Links") %}
{% set loc_data = data[locale] %}
{% set visibility = "" %}
{% if not data[locale] | length %}
    {% if data[fallback] | length %}
        {% set loc_data = data[fallback] %}
    {% else %}
        {% set visibility = "hidden" %}
    {% endif %}

{% endif %}

<div class="container mx-auto flex items-center justify-center pt-8 md:text-3xl text-2xl font-black text-gray-700 bg-white {{visibility}}">
    {{ title }}
</div>
{# "max-w-prose" -> use the same width as the prose container, that holds the markdown text #}
<div class="flex flex-col space-y-4 mx-8 my-8 sm:mx-auto items-center justify-center sm:max-w-prose">
    {% for item in loc_data %}
        {% set positioning = "" %}
        {% set margin_dir = "mr-4" %}
        {% if loop.index | even %}
            {% set positioning = "-reverse" %}
            {% set margin_dir = "mr-4" %}
        {% endif %}
        <div class="flex flex-col border-2 rounded-lg px-4 py-4 justify-center min-w-full">
            <div class="flex flex-row">
                <a href="{{item.href}}" target="_blank" class="{{margin_dir}} {{anim_hover_grow(scale='scale-110') }}">
                    {% if item.type == "research" %}
                        {{ icon("research", size="large") }}
                    {% elif item.type == "teaching" %}
                        {{ icon("teaching", size="large") }}
                    {% else %}
                        {{ icon("rss", size="large") }}
                    {% endif %}
                </a>
                <div class="flex flex-col">
                    <div class="flex flex-row justify-between">
                        <div class="font-medium text-xl sm:text-2xl">
                            {{ item.title }}
                        </div>
                        <div  class="{{anim_hover_grow() }}">
                            <a href="{{item.href}}" target="_blank">
                                {{ icon("web") }}
                            </a>
                        </div>
                    </div>
                    <div class="sm:text-lg max-w-md">
                        <div class="flex flex-row mt-1">
                            <div class="mr-2">
                                <div class="collapse overflow-y-hidden" id="link_full_{{loop.index}}">
                                    {{ item.short }}
                                </div>
                                <div class="" id="link_truncate_{{loop.index}}">
                                    ...
                                </div>
                            </div>
                            <div class="flex-none">
                                <div class="rounded-full {{anim_hover_grow('bg-gray-200')}}" 
                                    onclick="expand_text(this, 'link_truncate_{{loop.index}}', 'link_full_{{loop.index}}')">
                                    {{ icon("expand_arrow") }}
                                    {{ icon("collapse_arrow", "hidden") }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-2 flex flex-row justify-center flex-wrap max-w-md mb-2">
                {% for tag in item.tags %}
                    <div class="mt-2 mx-1 px-2 bg-gray-200 rounded-lg text-sm">
                        {{tag}}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
{% endmacro %}

