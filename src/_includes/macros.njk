{% macro grid_short_info(data) %}
{% set loc_data = data[locale] %}
{% set margin_top = "10" %}

{% if not data[locale] | length %}
    {% if data[fallback] | length %}
        {% set loc_data = data[fallback] %}
    {% else %}
        {% set margin_top = "0" %}
    {% endif %}
{% endif %}

{% set batch_size = defaults.header_settings.init_show %}
{% if data.settings.init_show %}
    {% set batch_size = data.settings.init_show %}
{% endif %}

{% if not data.settings.show_all %}
    {% set show_all = false %}
{% else %}
    {% set show_all = data.settings.show_all %}
{% endif %}

{% set number_grid = loc_data | length %}
{% set number_batch = loc_data | batch(batch_size) | length %}
<div class="sm:flex sm:flex-col mt-{{margin_top}}">
{% set invisible_b = "" %}
{% set invisible_i = "" %}

{% set item_index = 0 %}
{% for batch_items in loc_data | batch(batch_size) %}
    <div class="header-card-batch-style md:{{invisible_b}}" id="header-batch-{{loop.index}}">
        {% for item in batch_items %}
            {% set item_index = item_index + 1 %}
            {% set min_w_css = "min-w-1/" + batch_items | length %}
            {% if batch_items | length == 1 %}
                {% set min_w_css = "" %}
            {% endif %}
            <div class="header-card-item-style md:visible {{invisible_i}} md:{{min_w_css}}" id="header-card-{{item_index}}">
                <div class="flex justify-center mt-3">
                    {% if item.href %}
                        <a href="{{item.href | trim }}" target="_blank">
                            {% if item.image %}
                                <img src="{% ImageSync item.image %}" class="object-scale-down h-10 {{anim_hover_grow(scale='scale-110') }}">
                            {% endif %}
                        </a>
                    {% endif %}
                </div>
                <div class="flex flex-col justify-center px-4 py-5 mb-8">
                    {% if item.name %}
                        <h1 class="font-medium pb-2">{{item.name}}</h1>
                    {% endif %}
                    {% if item.name %}
                        <p>{{item.short}}</p>    
                    {% endif %}
                </div>
                <div class="absolute bottom-0 right-0 mr-4 mb-4">
                    {% if item.href %}
                        <div class="{{anim_hover_grow()}}">
                            <a href="{{item.href | trim }}" target="_blank">
                                <div class="w-6 h-6">
                                    {{ icon("web") }}
                                </div>
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% if not show_all %}
                {% set invisible_i = "hidden" %}
            {% endif %}
        {% endfor %}
    </div>
    {% if not show_all %}
        {% set invisible_b = "hidden" %}
    {% endif %}
{% endfor %}
</div>
{% if show_all %}
    {% set hidden_exp = "hidden" %}
    {% set hidden_coll = "" %}
{% else %}
    {% set hidden_exp = "" %}
    {% set hidden_coll = "hidden" %}
{% endif %}
<div class="items-center justify-center flex-col mt-2">
    <div class="flex justify-center items-center">
        {% if number_grid > 1 %}
            <a class="md:hidden rounded-full w-6 h-6 {{anim_hover_grow('bg-blue-200')}}" id="header-btn-mbl">
                {% if show_all %}
                    {{ icon("expand_arrow",  "hidden rounded-full") }}
                    {{ icon("collapse_arrow", "rounded-full") }}    
                {% else %}
                    {{ icon("expand_arrow",  "rounded-full") }}
                    {{ icon("collapse_arrow", "hidden rounded-full") }}    
                {% endif %}
            </a>
        {% endif %}
        {% if number_batch > 1 %}
            <div class="hidden md:block rounded-full w-6 h-6 {{anim_hover_grow('bg-blue-200')}}" id="header-btn-dsk">
                {% if show_all %}
                    {{ icon("expand_arrow",  "md:hidden rounded-full") }}
                    {{ icon("collapse_arrow", "rounded-full") }}    
                {% else %}
                    {{ icon("expand_arrow",  "rounded-full") }}
                    {{ icon("collapse_arrow", "md:hidden rounded-full") }}    
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>
{% endmacro %}

