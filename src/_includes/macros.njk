{% macro grid_short_info(data) %}
{% set loc_data = data[locale] %}
{% set margin_top = "10" %}

{% if not data[locale] | length %}
    {% if data[fallback] | length %}
        {% set loc_data = data[fallback] %}
    {% else %}
        {% set margin_top = "0" %}
    {% endif %}
{% endif %}

{% set batch_size = defaults.header_settings.init_show %}
{% if data.settings.init_show %}
    {% set batch_size = data.settings.init_show %}
{% endif %}

{% set number_grid = loc_data | length %}
{% set number_batch = loc_data | batch(batch_size) | length %}
<div class="sm:flex sm:flex-col mt-{{margin_top}} expand-trans">
{% set hidden_class_b = "" %}
{% set hidden_class_i = "" %}
{% set item_index = 0 %}
{% for batch_items in loc_data | batch(batch_size) %}
    <div class="flex flex-col justify-center sm:flex-row sm:space-x-4 sm:space-y-0 space-y-4 my-2 xl:mx-60 
                lg:mx-28 md:mx-12 mx-10 overflow-x-auto relative sm:{{hidden_class_b}} sm:px-10" id="batch-{{loop.index}}">
        {% for item in batch_items %}
            {% set item_index = item_index + 1 %}
            {% set min_w_css = "min-w-1/" + batch_items | length %}
            {% if batch_items | length == 1 %}
                {% set min_w_css = "" %}
            {% endif %}
            <div class="rounded-md border-2 pt-2 {{hidden_class_i}} sm:block min-h-full sm:{{min_w_css}} sm:max-w-1/2 sm:px-5 relative" id="card-{{item_index}}">
                <div class="flex justify-center mt-3">
                    {% if item.image %}
                        <a href="{{item.href | trim }}" target="_blank">
                            {% if item.href %}        
                                <img src="{{item.image}}" class="object-scale-down h-10 {{anim_hover_grow(scale='scale-110') }}">
                            {% endif %}
                        </a>
                    {% endif %}
                </div>
                <div class="flex flex-col justify-center px-4 py-5 mb-8">
                    {% if item.name %}
                        <h1 class="font-medium pb-2">{{item.name}}</h1>
                    {% endif %}
                    {% if item.name %}
                        <p>{{item.short}}</p>    
                    {% endif %}
                </div>
                <div class="absolute bottom-0 right-0 mr-4 mb-4">
                    {% if item.href %}
                        <div class="{{anim_hover_grow()}}">
                            <a href="{{item.href | trim }}" target="_blank">
                                {{ icon("web") }}
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
            {% set hidden_class_i = "hidden" %}
        {% endfor %}
    </div>
    {% set hidden_class_b="hidden" %}
{% endfor %}
</div>
<div class="items-center justify-center flex-col mt-2">
    <div class="flex justify-center items-center">
        {% if number_grid > 1 %}
            <a class="sm:hidden rounded-full {{anim_hover_grow('bg-gray-200')}}" onclick="toggle_class(this, 'card', 'hidden', {{ number_grid }} )">
                {{ icon("expand_arrow", "rounded-full") }}
                {{ icon("collapse_arrow", "hidden rounded-full") }}
            </a>
        {% endif %}
        {% if number_batch > 1 %}
            <div class="hidden sm:block rounded-full {{anim_hover_grow('bg-gray-200')}}" onclick="toggle_class(this, 'batch', 'sm:hidden', {{ number_batch }} )">
                {{ icon("expand_arrow", "rounded-full") }}
                {{ icon("collapse_arrow", "sm:hidden rounded-full") }}
            </div>
        {% endif %}
    </div>
</div>
{% endmacro %}

