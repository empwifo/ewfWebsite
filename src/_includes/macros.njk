{% macro getTranslation(key) %}
    {% if translations[locale][key] %}
        {{ translations[locale][key] }}
    {% else %}
        {{ key }}
    {% endif %}
{% endmacro %}

{% macro getSlug(key) %}
    {% if translations[locale][key] %}
        {{slugs[locale][key] | trim }}
    {% else %}
        {{key | trim}}
    {% endif %}
{% endmacro %}

