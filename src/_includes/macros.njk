{% macro grid_short_info(data) %}
{% set number_grid = data[locale] | length %}
<div class="flex flex-row space-x-4 my-10 xl:mx-60 lg:mx-28 md:mx-12 mx-10 overflow-x-auto">
    {% for item in data[locale] %}
        <div class="border-2 rounded-md flex flex-wrap flex-col justify-center pt-2 min-w-full sm:min-w-min	">
            <div class="flex justify-center">
                <a href="{{item.href | trim }}" target="_blank">
                    <img src="{{item.image}}" class="object-scale-down h-12">
                </a>
            </div>
            <div class="flex justify-center px-4 py-5">
                <p>{{item.short}}</p>    
            </div>
        </div>
    {% endfor %}
</div>

{% endmacro %}

