<footer class="text-gray-700 bg-white border-t body-font">
    <div>
      <div class="container flex flex-col justify-center flex-wrap px-5 py-6 lg:px-20 sm:flex-row">
        <span class="flex flex-col justify-center mb-2 sm:mt-0 sm:mx-10">
          <p class="text-sm text-center text-gray-400">
            <a href="https://www.ruhr-uni-bochum.de/de/impressum" target="_blank">{{macros.getTranslation("imprint")}}</a>
          </p>
          <p class="text-sm text-center text-gray-400">
            <a href='https://www.ruhr-uni-bochum.de/de/datenschutz' target="_blank">{{macros.getTranslation("privacypolicy")}}</a>
          </p>
        </span>
        <span class="inline-flex justify-center mb-2 sm:mt-0  sm:mx-10">
          <a href="https://www.uaruhr.de/", target="_blank">
            {% set src_opt %}{% ImageSync '/assets/images/logos/uaruhrlogo.png' %}{% endset %}
            {% set src_opt_fallback %}{{ src_opt | fallbackImage(image_settings["image_fallback_type"]) }}{% endset %}    
            <picture>
                <source srcset="{{ src_opt }}" type="image/webp">
                <source srcset="{{ src_opt_fallback }}" type="image/jpeg"> 
                <img width="100" src="{{ src_opt_fallback }}">
            </picture>
          </a>
        </span>
        <div class="sm:hidden flex justify-center mt-4" id="button_up_mbl">
          <button class="bg-blue-300 sm:hover:bg-blue-400 ring-4 ring-blue-200 py-2 px-2 rounded-full focus:outline-none" id="topButton" onclick="topFunction()">
            <div class="w-6 h-6">
              {{macros.icon("arrow_up", size="small")}}
            </div>
          </button>
        </div>
      </div>
    </div>
  </footer>